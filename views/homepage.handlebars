{{!-- loop over all blogposts --}}

{{#each post as |blogpost| }}
<div class="row mb-4 blogpost">
    <div class="col-md-5">
        <h2><a href="/blogpost/{{blogpost.id}}">{{blogpost.post_name}}</a></h2>
        <p>
            {{blogpost.blog_body}}
        </p>
        <p>
            Created by {{blogpost.user_id.name}} on {{ format_date blogpost.date_created}}
        </p>
    </div>
</div>
{{/each}}